<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InviteFriendsActivity"
        android:background="@color/background">


    <ImageView
            android:id="@+id/imageViewInviteFacebookMessenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook_messenger"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" android:layout_marginTop="308dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/imageViewInviteGooglePlus"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_google_plus"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="92dp"
            android:layout_marginTop="236dp" app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
